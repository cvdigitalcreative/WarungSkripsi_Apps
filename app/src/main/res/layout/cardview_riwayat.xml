<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/cardview_riwayat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tanggal_riwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="99-99-9999" />

            <TextView
                android:id="@+id/nama_konsultan_riwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="xxxxxxxxxxxxxxxxxxx" />

            <TextView
                android:id="@+id/sesi_riwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23.59 s/d 23.59" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>